<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3d181818" />

    <LinearLayout
        android:id="@+id/ll_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingStart="@dimen/_15dp"
        android:paddingEnd="@dimen/_15dp"
        android:paddingBottom="@dimen/_15dp">

        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_dialog_ios"
            android:orientation="vertical" />

        <com.demo.example.OS.custom.BoldText
            android:id="@+id/tv_cancel_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/sel_dialog_ios"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/_8dp"
            android:paddingBottom="@dimen/_8dp"
            android:text="@string/cancel"
            android:textColor="@color/c_selected"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
